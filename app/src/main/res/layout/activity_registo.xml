<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/angryimg3"
    android:padding="16dp">

    <!-- Outros elementos de introdução ou informações sobre a aplicação -->


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Registar"
        android:textColor="#F4F4F4"
        android:textColorLink="#FDFCFC"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passeregistarText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Já tem conta?"
        android:textColor="#FFFEFE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView"
        android:text="Entrar"
        android:textAllCaps="true"
        android:textColor="#A3DFDF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeregistarText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textColor="#FFFEFE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/emailregistarText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Telemóvel"
        android:textColor="#FFFEFE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telemovelText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Palavra-Passe"
        android:textColor="#FFFEFE"
        android:textSize="16sp" />


    <Button
        android:id="@+id/registerButton"
        style="@style/BotaoPadrao"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="44dp"
        android:background="#FAF7F7"
        android:backgroundTint="#3EA4E2"
        android:onClick="registerUser"
        android:text="Criar"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/emailregistarText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/telemovelText"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="9"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/passeregistarText"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#000000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/kora_img" />

    <EditText
        android:id="@+id/nomeregistarText"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#000000" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="Nome"
        android:textColor="#FFFEFE"
        android:textSize="16sp" />

</RelativeLayout>